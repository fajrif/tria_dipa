<section class="page-title style-two" style="background-image: url(<%= image_url("facilities/banner.png") %>);">
	<div class="auto-container">
	</div>
</section>

<!-- Blog Single -->
<section class="blog-single">
	<div class="auto-container">
		<div class="row">
			<div class="col-lg-12">
				<h2 class="fw-700"><%= @institution.name %></h2>
				<div class="text"><%= raw @institution.description %></div>
			</div>
		</div>
	</div>
	<div class="auto-container">
		<div class="row justify-content-between align-items-center">
			<div class="col-lg-12 text-center pt-30 text-center">
				<%= image_tag @institution.image.variant(resize: "1132x390").processed, style: "width:90%;" %>
			</div>
			<div class="col-lg-6 img1 pt-30 pb-30 text-center">
				<%= image_tag @institution.image1.variant(resize: "500x500").processed if @institution.image1.attached? %>
			</div>
			<div class="col-lg-6 img2 pt-30 pb-30 text-center">
				<%= image_tag @institution.image2.variant(resize: "500x500").processed if @institution.image2.attached? %>
			</div>
			<div class="col-lg-6">
				<%= raw @institution.description1 %>
			</div>
			<div class="col-lg-6">
				<%= raw @institution.description2 %>
			</div>
		</div>
	</div>
</section>
<!-- End Blog Single -->
<%= content_for :tail do %>
<style>
	.blog-single .img1 > img,
	.blog-single .img2 > img {
		width: 80%;
	}
</style>
<% end %>
