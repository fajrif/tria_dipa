<% title_page("Question details") %>
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<td style="width:15%;"><b>ID</b></td>
						<td><%= @question.id %></td>
					</tr>
					<tr>
						<td><b>Question</b></td>
						<td>
							<h5 class="fs-14 mb-0 text-body"><%= @question.question %></h5>
						</td>
					</tr>
					<tr>
						<td><b>Answer</b></td>
						<td><%= @question.answer %></td>
					</tr>
					<tr>
						<td><b>Category Name</b></td>
						<td><%= @question.category_name %></td>
					</tr>
				</table>
				<div class="form-actions">
					<%= link_to 'Edit', edit_admins_question_path(@question), :class => 'btn btn-secondary' %>
					<%= link_to 'Destroy', admins_question_path(@question), :data => { :confirm => 'Are you sure?' }, :method => :delete, :class => 'btn btn-danger' %>
					<%= link_to 'View All', admins_questions_path, :class => 'btn btn-light' %>
				</div>
			</div>
		</div>
	</div>
</div>
