<% title_page("Category details") %>
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<td style="width:10%;"><b>ID</b></td>
						<td><%= @category.id %></td>
					</tr>
					<tr>
						<td><b>Name</b></td>
						<td><h5 class="fs-14 mb-0 text-body"><%= @category.name %></h5></td>
					</tr>
					<tr>
						<td><b>Badge</b></td>
						<td><%= badge_category(@category) %></td>
					</tr>
					<tr>
						<td><b>Articles</b></td>
						<td><%= @category.articles.size %></td>
					</tr>
				</table>
				<div class="form-actions">
					<%= link_to 'Edit', edit_admins_category_path(@category.id), :class => 'btn btn-secondary' %>
					<%= link_to 'Destroy', admins_category_path(@category.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, :class => 'btn btn-danger' %>
					<%= link_to 'View All', admins_categories_path, :class => 'btn btn-light' %>
				</div>
			</div>
		</div>
	</div>
</div>
