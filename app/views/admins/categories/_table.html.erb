<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center" style="width:10%;">ID</th>
				<th>Name</th>
				<th>Badge</th>
				<th class="text-center">Articles</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% for category in @categories %>
				<tr>
					<td class="text-center"><%= category.id %></td>
					<td><h5 class="fs-14 mb-0"><%= link_to category.name, admins_category_path(category.id), class: "text-body" %></h5></td>
					<td><%= badge_category(category) %></td>
					<td class="text-center"><%= category.articles.size %></td>
					<td>
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_category_path(category.id), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li>
									<%= link_to edit_admins_category_path(category.id), class: "dropdown-item edit-list" do %>
										<i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_category_path(category.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @categories %>
