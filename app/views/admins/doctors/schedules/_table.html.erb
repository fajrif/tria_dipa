<div class="table-card">
	<table class="table align-middle">
		<thead class="table-light">
			<tr>
				<th class="text-center">Day</th>
				<th>Start Time</th>
				<th>End Time</th>
				<th class="text-center">Action</th>
			</tr>
		</thead>
		<tbody>
			<% for s in @doctor.schedules %>
				<tr>
					<td class="text-center"><b><%= s.day_name %></b></td>
					<td><%= s.start_time %></td>
					<td><%= s.end_time %></td>
					<td class="text-center">
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to edit_admins_doctor_schedule_path(@doctor.id, s), :remote => true, class: "dropdown-item edit-list" do %>
										<i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_doctor_schedule_path(@doctor.id, s), :data => { :confirm => 'Are you sure?' }, :method => :delete, :remote => true, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
