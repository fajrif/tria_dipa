<div class="modal-header">
	<h5 class="modal-title">Doctor schedule</h5>
	<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
<%= simple_form_for @schedule, url: (@schedule.new_record? ? admins_doctor_schedules_path(@doctor.id) : admins_doctor_schedule_path(@doctor.id, @schedule.id)), method: (@schedule.new_record? ? :post : :put), remote: true do |f| %>
	<%= f.error_notification %>
	<%= f.input :day_code, as: :select, collection: Date::DAYNAMES.each_with_index.map { |x, i| [x, i] }, include_blank: false %>
	<%= f.input :start_time, as: :select, collection: populate_array_of_time, include_blank: true %>
	<%= f.input :end_time, as: :select, collection: populate_array_of_time, include_blank: true %>
	<div class="row">
		<div class="col-lg-12">
			<div class="hstack gap-2 justify-content-end">
				<a class="btn btn-light" data-bs-dismiss="modal" aria-label="Close">Close</a>
				<%= f.button :submit, 'Save', :class => 'btn btn-secondary' %>
			</div>
		</div>
	</div>
<% end %>
</div>
