<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">ID</th>
				<th>Photo</th>
				<th>Full Name</th>
				<th>Message</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% for testimonial in @testimonials %>
				<tr>
					<td class="text-center"><%= testimonial.id %></td>
					<td>
						<% if testimonial.photo.attached? %>
							<%= image_tag testimonial.photo.variant(resize_to_limit: [80,80]) %>
						<% else %>
							<%= image_tag('default-testimonial.png') %>
						<% end %>
					</td>
					<td>
						<h5 class="fs-14 mb-1"><%= link_to testimonial.full_name, admins_testimonial_path(testimonial), class: "text-body" %></h5>
					</td>
					<td>
						<%= truncate_text(testimonial.comment, 250) %>
					</td>
					<td>
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_testimonial_path(testimonial), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li>
									<%= link_to edit_admins_testimonial_path(testimonial), class: "dropdown-item edit-list" do %>
										<i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_testimonial_path(testimonial), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @testimonials %>
