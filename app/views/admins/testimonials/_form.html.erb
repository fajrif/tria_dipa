<%= simple_form_for [:admins, @testimonial] do |f| %>
	<div class="row">
		<div class="col-lg-8">
			<div class="card">
				<div class="card-body">
					<%= f.error_notification %>
					<fieldset>
						<%= f.input :photo, as: :file %>
						<%= f.input :full_name, as: :string %>
						<%= f.input :comment, as: :text, input_html: { rows: 10 } %>
					</fieldset>
					<%= f.error :base %>
					<div class="form-actions">
						<%= f.button :submit, :class => 'btn btn-secondary' %>
						<% unless @testimonial.new_record? %>
							<%= link_to "Cancel", admins_testimonial_path(@testimonial), :class => 'btn btn-light' %>
						<% else %>
							<%= link_to "Cancel", admins_testimonials_path, :class => 'btn btn-light' %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="row">
				<%= render "admins/shared/error_messages", :target => @testimonial, col: 'col-lg-12' %>
			</div>
		</div>
	</div>
<% end %>
