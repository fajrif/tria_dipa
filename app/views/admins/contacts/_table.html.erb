<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">ID</th>
				<th>Contact Person</th>
				<th>Message</th>
				<th>Created At</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% for inquiry in @contacts %>
				<tr>
					<td class="text-center"><%= inquiry.id %></td>
					<td>
						<h5 class="fs-14 mb-1"><%= link_to inquiry.name, admins_investor_inquiry_path(inquiry), class: "text-body" %></h5>
						<p class="text-muted mb-1">Company : <%= inquiry.company_name %></p>
						<p class="text-muted mb-1">Email : <%= inquiry.email %></p>
						<p class="text-muted mb-0">Phone : <%= inquiry.phone %></p>
					</td>
					<td><%= truncate_text(inquiry.message, 80) %></td>
					<td><%= inquiry.created_at.strftime('%d/%m/%Y %H:%M') %></td>
					<td>
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_contact_path(inquiry), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_contact_path(inquiry), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @contacts %>
