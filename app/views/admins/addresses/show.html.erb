<% title_page("Address details") %>
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<td style="width:15%;"><b>ID</b></td>
						<td><%= @address.id %></td>
					</tr>
					<tr>
						<td><b>Order No</b></td>
						<td><%= @address.order_no %></td>
					</tr>
					<tr>
						<td><b>Name</b></td>
						<td><h5 class="fs-14 mb-0 text-body"><%= @address.name %></h5></td>
					</tr>
					<tr>
						<td><b>Description</b></td>
						<td><%= raw @address.complete_address %></td>
					</tr>
					<% unless @address.email1.blank? %>
					<tr>
						<td><b>Email 1</b></td>
						<td><%= @address.email1 %></td>
					</tr>
					<% end %>
					<% unless @address.email2.blank? %>
					<tr>
						<td><b>Email 2</b></td>
						<td><%= @address.email2 %></td>
					</tr>
					<% end %>
					<% unless @address.phone1.blank? %>
					<tr>
						<td><b>Phone 1</b></td>
						<td><%= @address.phone1 %></td>
					</tr>
					<% end %>
					<% unless @address.phone2.blank? %>
					<tr>
						<td><b>Phone 2</b></td>
						<td><%= @address.phone2 %></td>
					</tr>
					<% end %>
					<% unless @address.fax.blank? %>
					<tr>
						<td><b>Fax</b></td>
						<td><%= @address.fax %></td>
					</tr>
					<% end %>
					<% unless @address.longitude.blank? %>
					<tr>
						<td><b>Longitude</b></td>
						<td><%= @address.longitude %></td>
					</tr>
					<% end %>
					<% unless @address.latitude.blank? %>
					<tr>
						<td><b>Latitude</b></td>
						<td><%= @address.latitude %></td>
					</tr>
					<% end %>
				</table>
				<div class="form-actions">
					<%= link_to 'Edit', edit_admins_address_path(@address), :class => 'btn btn-secondary' %>
					<%= link_to 'Destroy', admins_address_path(@address), :data => { :confirm => 'Are you sure?' }, :method => :delete, :class => 'btn btn-danger' %>
					<%= link_to 'View All', admins_addresses_path, :class => 'btn btn-light' %>
				</div>
			</div>
		</div>
	</div>
</div>
