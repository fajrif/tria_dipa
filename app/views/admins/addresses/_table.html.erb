<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">Sort</th>
				<th class="text-center">Order</th>
				<th>Name</th>
				<th>Complete Address</th>
				<th>Phone</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody id="contents" data-url="<%= sort_admins_addresses_path %>">
			<% for address in @addresses %>
				<%= content_tag :tr, id: dom_id(address) do %>
					<td class="handle text-center">
						<i class="ri-drag-move-2-line me-2"></i>
					</td>
					<td class="text-center"><%= address.order_no %></td>
					<td><h5 class="fs-14 mb-0"><%= link_to address.name, admins_address_path(address), class: "text-body" %></h5></td>
					<td><%= raw address.complete_address %></td>
					<td>
						<% unless address.phone1.blank? %>
							<p class="text-muted mb-0">Phone 1: <%= address.phone1 %></p>
						<% end %>
						<% unless address.phone2.blank? %>
							<p class="text-muted mb-0">Phone 2: <%= address.phone2 %></p>
						<% end %>
						<% unless address.fax.blank? %>
							<p class="text-muted mb-0">Fax: <%= address.fax %></p>
						<% end %>
					</td>
					<td>
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_address_path(address), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li>
									<%= link_to edit_admins_address_path(address), class: "dropdown-item edit-list" do %>
										<i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_address_path(address), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				<% end %>
			<% end %>
		</tbody>
	</table>
</div>
