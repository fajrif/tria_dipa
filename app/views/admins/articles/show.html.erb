<% title_page("Article Details") %>
<div class="row">
	<div class="col-md-12 col-sm-12">
		<div class="card card-box">
			<div class="card-body">
				<ul class="nav nav-tabs mb-3" role="tablist">
					<li class="nav-item" role="presentation">
						<a class="nav-link active" data-bs-toggle="tab" href="#details" role="tab" aria-selected="true">
								Details
						</a>
					</li>
					<li class="nav-item" role="presentation">
						<a class="nav-link" data-bs-toggle="tab" href="#metatags" role="tab" aria-selected="false" tabindex="-1">
								Meta Tags
						</a>
					</li>
				</ul>
				<div class="tab-content">
					<div class="tab-pane active show" id="details" role="tabpanel">
						<%= render "details" %>
					</div>
					<div class="tab-pane" id="metatags" role="tabpanel">
						<%= render "meta_tags" %>
					</div>
				</div>
				<div class="form-actions">
					<%= link_to 'Edit', edit_admins_article_path(@article.id), :class => 'btn btn-secondary' %>
					<%= link_to 'Destroy', admins_article_path(@article.id), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger' %>
					<%= link_to 'View All', admins_articles_path, :class => 'btn btn-light' %>
				</div>
			</div>
		</div>
	</div>
</div>
