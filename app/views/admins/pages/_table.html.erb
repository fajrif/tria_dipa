<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">ID</th>
				<th>Title</th>
				<th>Slug</th>
				<th>Banner Section</th>
				<th class="text-center">Sections</th>
				<th>Published At</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% for page in @pages %>
				<tr>
					<td class="text-center"><%= page.id %></td>
					<td><h5 class="fs-14 mb-0"><%= link_to page.title, admins_page_path(page.id), class: "text-primary" %></h5></td>
					<td><%= link_to "/#{page.slug}", page_path(page), target: :_blank %></td>
					<td><b><%= page.try(:banner_section).try(:name_id_label) %></b></td>
					<td class="text-center"><%= page.sections.size %></td>
					<td>
						<h5 class="fs-14 mb-1"><%= page.published_label %></h5>
						<p class="text-muted mb-0">Date : <%= page.published_date_label %></p>
					</td>
					<td>
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_page_path(page.id), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li>
									<%= link_to edit_admins_page_path(page.id), class: "dropdown-item edit-list" do %>
										<i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_page_path(page.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @pages %>
