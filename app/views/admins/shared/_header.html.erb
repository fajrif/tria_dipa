<header id="page-topbar">
	<div class="layout-width">
		<div class="navbar-header">
			<div class="d-flex">
				<button type="button" class="btn btn-sm px-3 fs-16 header-item vertical-menu-btn topnav-hamburger" id="topnav-hamburger-icon">
					<span class="hamburger-icon">
						<span></span>
						<span></span>
						<span></span>
					</span>
				</button>
			</div>

			<div class="d-flex align-items-center">
				<div class="dropdown ms-1 topbar-head-dropdown header-item">
					<button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<% if I18n.locale == :en %>
							<img id="header-lang-img" src="<%= image_url('flags/us.svg') %>" height="20" class="rounded">
						<% elsif I18n.locale == :id %>
							<img id="header-lang-img" src="<%= image_url('flags/id.svg') %>" height="20" class="rounded">
						<% end %>
					</button>
					<div class="dropdown-menu dropdown-menu-end" style="">
						<!-- item-->
						<a href="<%= url_for(locale: nil) %>" class="dropdown-item notify-item language py-2" data-lang="en" title="English">
							<img src="<%= image_url('flags/us.svg') %>" class="me-2 rounded" height="18">
							<span class="align-middle">English</span>
						</a>
						<!-- item-->
						<a href="<%= url_for(locale: :id) %>" class="dropdown-item notify-item language" data-lang="id" title="Indonesia">
							<img src="<%= image_url('flags/id.svg') %>" class="me-2 rounded" height="18">
							<span class="align-middle">Indonesia</span>
						</a>
					</div>
				</div>
				<div class="dropdown ms-sm-3 header-item topbar-user">
					<button type="button" class="btn" id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<span class="d-flex align-items-center">
							<span class="text-start">
								<span class="d-none d-xl-inline-block ms-1 fw-medium user-name-text"><%= current_admin.email %></span>
							</span>
						</span>
					</button>
					<div class="dropdown-menu dropdown-menu-end">
						<%= link_to admins_change_password_path, :class => "dropdown-item" do %>
							<i class="mdi mdi-account-lock-open-outline text-muted fs-16 align-middle me-1"></i> <span class="align-middle" data-key="t-logout">Change Password</span>
						<% end %>
						<%= link_to destroy_admin_session_path, :method => :delete, :class => "dropdown-item" do %>
							<i class="mdi mdi-logout text-muted fs-16 align-middle me-1"></i> <span class="align-middle" data-key="t-logout">Logout</span>
						<% end %>
					</div>
				</div>
			</div>

		</div>
	</div>
</header>
