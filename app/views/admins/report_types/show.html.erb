<% title_page("Report Type details") %>
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<td style="width:10%;"><b>ID</b></td>
						<td><%= @report_type.id %></td>
					</tr>
					<tr>
						<td><b>Name</b></td>
						<td><h5 class="fs-14 mb-0 text-body"><%= @report_type.name %></h5></td>
					</tr>
					<tr>
						<td><b>Badge</b></td>
						<td><%= badge_category(@report_type) %></td>
					</tr>
					<tr>
						<td><b>Reports</b></td>
						<td><%= @report_type.reports.size %></td>
					</tr>
				</table>
				<div class="form-actions">
					<%= link_to 'Edit', edit_admins_report_type_path(@report_type.id), :class => 'btn btn-secondary' %>
					<%= link_to 'Destroy', admins_report_type_path(@report_type.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, :class => 'btn btn-danger' %>
					<%= link_to 'View All', admins_report_types_path, :class => 'btn btn-light' %>
				</div>
			</div>
		</div>
	</div>
</div>
