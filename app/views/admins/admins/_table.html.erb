<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">ID</th>
				<th>Full Name</th>
				<th>Email</th>
				<th>Role</th>
				<th>Last Sign In</th>
				<th>Created At</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% for admin in @admins %>
				<tr>
					<td class="text-center"><%= admin.id %></td>
					<td><h5 class="fs-14"><%= link_to admin.full_name, admins_admin_path(admin), class: "text-body" %></h5></td>
					<td><%= admin.email %></td>
					<td><%= admin.role.name %></td>
					<td><%= admin.try(:last_sign_in_at).try(:strftime,'%d/%m/%Y %H:%M') %></td>
					<td><%= admin.created_at.strftime('%d/%m/%Y %H:%M') %></td>
					<td>
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_admin_path(admin), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_admin_path(admin), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @admins %>
