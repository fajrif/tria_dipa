<% title_page("Banner Sections") %>
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header border-0">
				<div class="row g-4 align-items-center">
					<div class="col-md-4">
						<%= form_tag admins_banner_sections_url, { :id => "index_search", :method => :get } do %>
							<div class="form-icon">
								<%= text_field_tag :search, params[:search], :class => "form-control form-control-icon", :placeholder => "Search banner section here ..." %>
								<i class="ri-search-line"></i>
							</div>
						<% end %>
					</div>
					<div class="col-sm-auto ms-auto">
						<div class="hstack gap-2">
							<a class="btn btn-success add-btn" href="<%= new_admins_banner_section_path %>"><i class="ri-add-line align-bottom me-1"></i> Add Banner Section</a>
						</div>
					</div>
				</div>
			</div>
			<div id="index_table" class="card-body">
				<%= render 'table' %>
			</div>
		</div>
	</div>
	<!--end col-->
</div>
<!--end row-->
