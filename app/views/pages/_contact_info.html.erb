<%- addresses = Address.all -%>
<div class="container text-extra-dark-gray">
	<div class="row">
		<% addresses.each do |address| %>
		<div class="col-12 col-md-6 margin-40px-bottom sm-margin-30px-bottom wow animate__fadeInUp">
			<h6 class="text-uppercase font-weight-600 mb-3"><%= address.name %></h6>
			<span class="d-block line-height-22"><%= raw address.complete_address %></span>
			<% unless address.email1.blank? %>
				<span class="d-block mt-2 mb-2">Email: <%= address.email1 %></span>
			<% end %>
			<% unless address.phone1.blank? %>
				<span class="d-block mt-2 mb-2">Telp: <%= address.phone1 %></span>
			<% end %>
			<% unless address.phone2.blank? %>
				<span class="d-block mt-2 mb-2">Telp: <%= address.phone2 %></span>
			<% end %>
			<% unless address.fax.blank? %>
				<span>Fax:<%= address.fax %></span>
			<% end %>
		</div>
		<% end %>
	</div>
</div>
