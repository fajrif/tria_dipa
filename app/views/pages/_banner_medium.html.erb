<!-- start page single banner -->
<section id="<%= banner.section_id %>" class="medium-banner <%= @banner_text_color %> wow animate__fadeIn parallax background-attachment-initial pb-0" data-parallax-background-ratio="0.5" style="background-image:url('<%= url_for(banner.image) if banner.image.attached? %>');">
	<div class="opacity-extra-medium bg-black"></div>
		<div class="container-xl position-relative h-400px sm-h-300px">
			<div class="row h-100">
				<div class="col-12 margin-20px-top sm-margin-50px-top d-flex justify-content-between flex-column">
					<div>
						<h1 class="font-weight-320 text-uppercase margin-35px-bottom sm-margin-15px-bottom w-100"><%= raw banner.title %></h1>
					</div>
					<div class="d-flex justify-content-between align-items-end align-items-md-start">
						<span class="font-weight-320 alt-font margin-five-bottom text-uppercase veritas-text-rotate w-200px text-end text-md-start">veritas</span>
						<div class="margin-five-bottom sm-margin-ten-bottom last-paragraph-no-margin sm-fs-16 w-30 lg-w-30 md-w-50 sm-w-100">
							<div><%= raw banner.description %></div>
						</div>
					</div>
				</div>
			</div>
		</div>
</section>
<!-- end page single banner -->
