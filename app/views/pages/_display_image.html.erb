<div class="container-xl">
	<div class="row align-items-center">
		<div class="col-md-12 text-center sm-margin-30px-bottom">
			<%- if snippet.image.attached? -%>
				<a class="lightbox-group-gallery-item" title="<%= snippet.title %>" href="<%= url_for(snippet.image) %>">
					<%= image_tag(url_for(snippet.image), alt: snippet.title, class: "w-100") %>
				</a>
			<%- end -%>
		</div>
	</div>
</div>
