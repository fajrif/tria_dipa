<div class="container-xl">
	<% unless snippet.title.blank? %>
	<div class="row margin-50px-bottom sm-margin-30px-bottom">
		<div class="col-lg-7 wow animate__fadeInLeft">
			<h3 class="font-weight-320 text-extra-dark-gray text-uppercase w-60"><%= snippet.title %></h3>
			<% unless snippet.short_description.blank? %>
				<%= raw snippet.short_description %>
			<% end %>
		</div>
	</div>
	<% end %>
	<div class="row">
		<div class="col-lg-12 tab-style3 wow animate__fadeIn">
			<!-- start tab navigation -->
			<ul class="nav nav-tabs margin-70px-bottom sm-margin-30px-bottom alt-font text-medium font-weight-500 justify-content-start align-items-start flex-column flex-md-row">
				<% snippet.children.each_with_index do |sp, index| %>
					<li class="nav-item"><a class="nav-link text-medium-gray <%= 'active' if index == 0 %>" href="#tab_sec<%= index + 1 %>" data-bs-toggle="tab"><%= sp.title %></a></li>
				<% end %>
			</ul>
			<!-- end tab navigation -->
		</div>
	</div>
	<div class="tab-content wow animate__fadeInUp">
		<% snippet.children.each_with_index do |sp, index| %>
			<!-- start tab content -->
			<div class="tab-pane med-text fade in <%= 'active show' if index == 0 %>" id="tab_sec<%= index + 1 %>">
				<%- template = sp.template.blank? ? sp.name : sp.template -%>
				<%= render template, snippet: sp, index: index %>
			</div>
			<!-- end tab content -->
		<% end %>
	</div>
</div>
