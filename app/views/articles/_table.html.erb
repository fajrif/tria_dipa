<% unless @articles.empty? %>
<ul class="blog-masonry blog-wrapper grid grid-loading grid-3col xl-grid-2col lg-grid-2col md-grid-2col sm-grid-2col xs-grid-1col gutter-large">
	<li class="grid-sizer"></li>
	<% @articles.each do |article| %>
	<!-- start post item -->
	<li class="grid-item last-paragraph-no-margin wow animate__fadeInUp">
		<div class="blog-post blog-post-style1 text-start">
			<div class="blog-post-images overflow-hidden margin-25px-bottom md-margin-20px-bottom border-radius-8">
				<a href="<%= article_path(article) %>">
					<%= image_tag cdn_image_url(article.thumbnail), alt: article.title %>
				</a>
			</div>
			<div class="post-details margin-20px-bottom w-95 sm-w-100">
				<span class="post-author text-medium text-extra-dark-gray text-uppercase d-block margin-10px-bottom sm-margin-5px-bottom"><%= article.try(:published_date).try(:strftime, '%d/%m/%Y') %> | <%= article.try(:category).try(:name) %></span>
				<a href="<%= article_path(article) %>" class="post-title font-weight-400 text-extra-large text-extra-dark-gray text-uppercase d-block margin-10px-bottom sm-margin-5px-bottom"><%= article.title %></a>
				<span class="post-author text-extra-dark-gray d-block margin-15px-bottom"><%= article.short_description %></span>
				<%= link_to article_path(article), class: "btn btn-veritas btn-medium btn-rounded margin-20px-top sm-margin-10px-top" do %>
					<%= t('global.read_more') %> <i class="veritas-icon-right icon-very-small" aria-hidden="true"></i>
				<% end %>
			</div>
		</div>
	</li>
	<!-- end post item -->
	<% end %>
</ul>
<!-- pagination -->
<div class="text-center margin-50px-tb sm-margin-30px-tb">
	<%= paginate @articles, theme: :pofo %>
</div>
<% else %>
	<span class="text-extra-large text-extra-dark-gray alt-font font-weight-500 margin-20px-bottom d-block"><%= t('global.no_data_found') %></span>
<% end %>
