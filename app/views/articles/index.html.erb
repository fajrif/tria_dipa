<section class="layout-pt-60 layout-pb-100">
	<div class="auto-container">
		<div class="row justify-content-center align-items-center text-center">
			<div class="section-title-page col-lg-12">
				<h2 class="fw-700">NEWS & EVENT</h2>
				<div class="text">Checkout our latest news &amp; events</div>
			</div>
		</div>

		<div class="row grid-base pt-50 wow fadeInUp">
			<% unless @articles.empty? %>
				<% @articles.each do |article| %>
				<!-- Blog Block -->
				<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
					<div class="blog -type-1">
						<div class="blog-image">
							<a href="<%= article_path(article) %>">
								<%= image_tag url_for(article.thumbnail), class: "border-radius-8" %>
							</a>
						</div>
						<div class="blog-content">
							<h4><%= link_to article.title, article_path(article) %></h4>
							<div><%= article.headline.truncate(100) %></div>
							<a href="<%= article_path(article) %>" class="theme-btn btn-style-three small">Read More</a>
						</div>
					</div>
				</div>
				<% end %>
			<% else %>
				<div class="col-lg-12">
					<h3>Oops! Not found...</h3>
				</div>
			<% end %>
			<!-- Pagination -->
			<%= paginate @articles, theme: :superio %>
		</div>
	</div>
</section>
