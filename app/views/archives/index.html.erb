<%= render "shared/setting_banners" %>

<!-- start post content section -->
<section id="<%= @archive_type.name.downcase.underscore %>">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center tab-style3">
				<!-- start tab navigation -->
				<ul class="nav nav-tabs margin-50px-bottom sm-margin-30px-bottom alt-font text-medium font-weight-500 justify-content-start align-items-start flex-column flex-md-row">
					<% @archive_types.each do |at| %>
						<li class="nav-item"><a href="<%= page_path(at) %>" class="nav-link text-medium-gray <%= 'active' if @archive_type == at %>"><%= at.name %></a></li>
					<% end %>
				</ul>
				<!-- end tab navigation -->
			</div>
		</div>

		<!-- filter -->
		<%= form_tag page_path(@archive_type), { id: "index_search", method: :get } do %>
			<div class="row justify-content-end margin-20px-bottom">
				<div class="col-12 col-md-3 text-start text-md-end sm-margin-15px-bottom">
					<%= select_tag :category, options_for_select([["Annual", "Annual"], ["Extraordinary", "Extraordinary"]], params[:category]), :prompt => 'Select Category Name', :class => "selectpicker filter_select mb-0" %>
				</div>
				<div class="col-6 col-md-3 text-start text-md-end sm-margin-15px-bottom">
					<%= select_tag :sort_by, options_for_select([["Newest", "desc"], ["Oldest", "asc"]], params[:sort_by]), :prompt => 'Select Order By', :class => "selectpicker filter_select mb-0" %>
				</div>
				<div class="col-6 col-md-3 text-start text-md-end sm-margin-15px-bottom">
					<%= select_tag :year, options_for_select(get_latest_year_options, params[:year]), :prompt => 'Select Year', :class => "selectpicker filter_select mb-0" %>
				</div>
			</div>
		<% end %>
		<!-- end filter -->

		<div class="row">
			<div id="index_table" class="col-lg-9 offset-lg-3 archives">
				<%= render "table" %>
			</div>
		</div>
	</div>
</section>
<!-- end blog content section -->
